<?xml version="1.0"?>
<extension key="de.systopia.remoteactivity" type="module">
  <file>remoteactivity</file>
  <name>CiviRemote Activity</name>
  <description>Exposes CiviCRM activities via the CiviRemote framework.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA</author>
    <email>info@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.remoteactivity</url>
    <url desc="Documentation">https://github.com/systopia/de.systopia.remoteactivity</url>
    <url desc="Support">https://github.com/systopia/de.systopia.remoteactivity</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-08-01</releaseDate>
  <version>1.0.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.58</ver>
  </compatibility>
  <requires>
    <ext>de.systopia.remotetools</ext>
  </requires>
  <comments></comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Remoteactivity</namespace>
    <format>23.02.1</format>
    <angularModule>crmRemoteactivity</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
</extension>
